{
  "name": "soomi",
  "version": "1.0.0",
  "private": true,
  "description": "Coach-powered Sleep Optimization Platform",
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "turbo run dev --filter=@soomi/mobile",
    "dev:coach": "turbo run dev --filter=@soomi/coach",
    "dev:api": "turbo run dev --filter=@soomi/api",
    "build": "turbo run build",
    "build:mobile": "turbo run build --filter=@soomi/mobile",
    "test": "turbo run test",
    "test:domain": "turbo run test --filter=@soomi/domain",
    "test:api": "turbo run test --filter=@soomi/api",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "db:migrate": "pnpm --filter @soomi/api db:migrate",
    "db:seed": "pnpm --filter @soomi/api db:seed",
    "db:studio": "pnpm --filter @soomi/api db:studio",
    "db:generate": "pnpm --filter @soomi/api db:generate",
    "i18n:validate": "pnpm --filter @soomi/shared i18n:validate",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
