    "@fastify/sensible": "^5.5.0",
    "@prisma/client": "^5.8.0",
    "@soomi/domain": "workspace:*",
    "@soomi/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "fastify": "^4.25.0",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.8",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
